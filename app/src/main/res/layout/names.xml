<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:padding="5dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@android:drawable/editbox_dropdown_light_frame">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="8.0"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:weightSum="1.9"
                android:layout_marginBottom="1.5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Contact Type"
                    android:textStyle="bold"
                    android:textColor="#d9004c"
                    android:id="@+id/textView99"
                    android:layout_weight="1.0"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:text="New Text"
                    android:id="@+id/txtvcontype"
                    android:textColor="#000000"
                    android:layout_weight="0.9" />
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:weightSum="1.9"
                android:layout_marginBottom="0.5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#d9004c"
                    android:text="CheckIn Time"
                    android:id="@+id/textView3"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:text="New Text"
                    android:id="@+id/txtvchkintime"
                    android:textColor="#000000" />
                <ImageView
                    android:id="@+id/imageViewStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/synced"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:weightSum="1.9"
                android:layout_marginBottom="1.5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Customer"
                    android:textStyle="bold"
                    android:textColor="#d9004c"
                    android:id="@+id/textView5"
                    android:layout_weight="1.0"
                    />

                <TextView
                    android:id="@+id/txtvcustomer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.9"
                    android:gravity="center_vertical"
                    android:singleLine="false"
                    android:text="New Text"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:weightSum="1.9"
                android:layout_marginBottom="1.5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Visit Purpose"
                    android:textStyle="bold"
                    android:textColor="#d9004c"
                    android:layout_weight="1.0"
                    />

                <TextView
                    android:id="@+id/txtvvisitpurpose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.9"
                    android:gravity="center_vertical"
                    android:singleLine="false"
                    android:text="New Text"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
