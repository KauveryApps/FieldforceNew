<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/editbox_dropdown_light_frame">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_weight="5.0"
            android:weightSum="5.0"
            android:layout_marginLeft="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:weightSum="2.0"
                android:layout_marginBottom="1.5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Customer Name"
                    android:textStyle="bold"
                    android:textColor="#d9004c"
                    android:id="@+id/textView5"
                    android:layout_weight="0.8"
                    />

                <TextView
                    android:id="@+id/tcusname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:singleLine="false"
                    android:text="New Text"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:weightSum="2.0"
                android:layout_marginBottom="0.5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#d9004c"
                    android:text="Corporate"
                    android:id="@+id/textView3"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:text="New Text"
                    android:singleLine="false"
                    android:id="@+id/tcorporate"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:weightSum="2.0"
                android:layout_marginBottom="0.5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Portfolio"
                    android:id="@+id/textView9"
                    android:textStyle="bold"
                    android:textColor="#d9004c"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:text="New Text"
                    android:singleLine="false"
                    android:maxLines="5"
                    android:id="@+id/taddress"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:weightSum="2.0"
                android:layout_marginBottom="0.5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Visit Date"
                    android:id="@+id/textView"
                    android:textStyle="bold"
                    android:textColor="#d9004c"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="40dp"
                    android:maxLines="4"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:text="New Text"
                    android:id="@+id/tvisitdate"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:weightSum="2.0"
                android:layout_marginBottom="0.5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Status"
                    android:textStyle="bold"
                    android:textColor="#d9004c"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="40dp"
                    android:maxLines="4"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:text="New Text"
                    android:id="@+id/tpriority"
                    android:textColor="#000000" />
            </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_weight="0.3"
               android:layout_height="wrap_content">

           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:id="@+id/chkoutlayout"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnchkin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_gradient_button"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="center"
                    android:layout_marginRight="30dp"
                    android:text="CHECK-IN"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />
                <Button
                    android:id="@+id/btnchkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rounded_gradient_button"
                    android:fontFamily="@font/robotoregular"
                    android:gravity="center"
                    android:text="check-out"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>